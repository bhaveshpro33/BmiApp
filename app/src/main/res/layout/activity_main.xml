<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#181922"
    tools:context=".resultPage">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="40sp"
        android:id="@+id/toolbar"
        android:background="#232533"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        app:titleMarginTop="@dimen/margin_large"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="@dimen/text_title"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_large" />

    <!-- Gender Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:weightSum="2">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/malecard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="180dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#2d2d36"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:src="@drawable/avatardesign"
                    android:contentDescription="Male Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_small"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/femalecard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/margin_small"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#2d2d36"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:layout_width="99dp"
                    android:layout_height="99dp"
                    android:src="@drawable/woman"
                    android:contentDescription="Female Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_small"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Main Cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Height Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#2d2d36">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="@dimen/text_small"
                    android:textColor="#bbbabd"/>

                <TextView
                    android:id="@+id/heightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150cm"
                    android:textSize="@dimen/text_value"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginVertical="@dimen/margin_small"/>

                <com.google.android.material.slider.Slider
                    android:id="@+id/heightSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="100"
                    android:valueTo="220"
                    android:stepSize="1"
                    android:value="150"
                    app:trackColorActive="#3162F5"
                    app:trackColorInactive="#D1D1D1"
                    app:thumbColor="#3162F5" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Weight & Age Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Weight Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_small"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#2d2d36">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textColor="#bbbabd"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/weightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_heading"
                        android:textStyle="bold"
                        android:layout_marginVertical="@dimen/margin_small"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnWeightMinus"
                            android:layout_width="@dimen/btn_size"
                            android:layout_height="@dimen/btn_size"
                            android:text="−"
                            android:textSize="@dimen/text_btn"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#3162F5"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@drawable/circle_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnWeightPlus"
                            android:layout_width="@dimen/btn_size"
                            android:layout_height="@dimen/btn_size"
                            android:text="＋"
                            android:textSize="@dimen/text_btn"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#3162F5"
                            android:background="@drawable/circle_button"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Age Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/margin_small"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#2d2d36">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textColor="#bbbabd"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/ageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_heading"
                        android:textStyle="bold"
                        android:layout_marginVertical="@dimen/margin_small"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAgeMinus"
                            android:layout_width="@dimen/btn_size"
                            android:layout_height="@dimen/btn_size"
                            android:text="−"
                            android:textSize="@dimen/text_btn"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#3162F5"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@drawable/circle_button"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAgePlus"
                            android:layout_width="@dimen/btn_size"
                            android:layout_height="@dimen/btn_size"
                            android:text="＋"
                            android:textSize="@dimen/text_btn"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#3162F5"
                            android:background="@drawable/circle_button"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calculateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="@dimen/text_normal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3162F5"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginHorizontal="@dimen/margin_xlarge"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
